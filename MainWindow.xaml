<Window x:Class="YtDlpWrapper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
        Title="YT-DLP Wrapper - Video Downloader" 
        Height="720" 
        Width="1280"
        WindowStartupLocation="CenterScreen"
        MinHeight="600"
        MinWidth="900"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="CanResize">
    
    <Window.Background>
        <SolidColorBrush Color="#F5F5F5"/>
    </Window.Background>
    
    <Window.Resources>
        <!-- Color Resources -->
        <SolidColorBrush x:Key="BackgroundColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="SurfaceColor" Color="#F8F9FA"/>
        <SolidColorBrush x:Key="AccentColor" Color="#007ACC"/>
        <SolidColorBrush x:Key="TextPrimaryColor" Color="#212529"/>
        <SolidColorBrush x:Key="TextSecondaryColor" Color="#6C757D"/>
        <SolidColorBrush x:Key="BorderColor" Color="#DEE2E6"/>
        <SolidColorBrush x:Key="HoverColor" Color="#E9ECEF"/>
        <SolidColorBrush x:Key="CardColor" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="ErrorColor" Color="#DC3545"/>
        
        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardColor}"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="Padding" Value="15"/>
        </Style>
        
        <!-- Text Styles -->
        <Style x:Key="SubtitleTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        </Style>
        
        <Style x:Key="SecondaryTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondaryColor}"/>
        </Style>
        
        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="3">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Watermark TextBox Style -->
        <Style x:Key="WatermarkTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource ModernTextBoxStyle}">
            <Style.Resources>
                <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                    <VisualBrush.Visual>
                        <Label Content="Paste your video URL here..." Foreground="{StaticResource TextSecondaryColor}" FontSize="14" Padding="0"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Style.Resources>
            <Style.Triggers>
                <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                    <Setter Property="Background" Value="{StaticResource CueBannerBrush}"/>
                </Trigger>
                <Trigger Property="Text" Value="{x:Null}">
                    <Setter Property="Background" Value="{StaticResource CueBannerBrush}"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocused" Value="True">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        
        <!-- Modern Button Style -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="3"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#0066AA"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004C80"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- Modern ComboBox Style -->
        <Style x:Key="ModernComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimaryColor}"/>
        </Style>
        
        <!-- Modern ProgressBar Style -->
        <Style x:Key="ModernProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Background" Value="{StaticResource SurfaceColor}"/>
            <Setter Property="Foreground" Value="{StaticResource AccentColor}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3">
                            <Border x:Name="PART_Track" CornerRadius="3">
                                <Border x:Name="PART_Indicator" 
                                        Background="{TemplateBinding Foreground}" 
                                        HorizontalAlignment="Left" 
                                        CornerRadius="3"/>
                            </Border>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Resize Borders -->
        <Border x:Name="ResizeBorderTop" Height="5" VerticalAlignment="Top" Background="Transparent" 
                MouseEnter="ResizeBorder_MouseEnter" MouseLeave="ResizeBorder_MouseLeave" 
                MouseLeftButtonDown="ResizeBorder_MouseLeftButtonDown" Grid.RowSpan="2" Cursor="SizeNS"/>
        <Border x:Name="ResizeBorderBottom" Height="5" VerticalAlignment="Bottom" Background="Transparent" 
                MouseEnter="ResizeBorder_MouseEnter" MouseLeave="ResizeBorder_MouseLeave" 
                MouseLeftButtonDown="ResizeBorder_MouseLeftButtonDown" Grid.RowSpan="2" Cursor="SizeNS"/>
        <Border x:Name="ResizeBorderLeft" Width="5" HorizontalAlignment="Left" Background="Transparent" 
                MouseEnter="ResizeBorder_MouseEnter" MouseLeave="ResizeBorder_MouseLeave" 
                MouseLeftButtonDown="ResizeBorder_MouseLeftButtonDown" Grid.RowSpan="2" Cursor="SizeWE"/>
        <Border x:Name="ResizeBorderRight" Width="5" HorizontalAlignment="Right" Background="Transparent" 
                MouseEnter="ResizeBorder_MouseEnter" MouseLeave="ResizeBorder_MouseLeave" 
                MouseLeftButtonDown="ResizeBorder_MouseLeftButtonDown" Grid.RowSpan="2" Cursor="SizeWE"/>
        
        <!-- Corner Resize Grips -->
        <Border x:Name="ResizeGripTopLeft" Width="10" Height="10" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Background="Transparent" MouseLeftButtonDown="ResizeGrip_MouseLeftButtonDown" 
                Grid.RowSpan="2" Cursor="SizeNWSE"/>
        <Border x:Name="ResizeGripTopRight" Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Top" 
                Background="Transparent" MouseLeftButtonDown="ResizeGrip_MouseLeftButtonDown" 
                Grid.RowSpan="2" Cursor="SizeNESW"/>
        <Border x:Name="ResizeGripBottomLeft" Width="10" Height="10" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                Background="Transparent" MouseLeftButtonDown="ResizeGrip_MouseLeftButtonDown" 
                Grid.RowSpan="2" Cursor="SizeNESW"/>
        <Border x:Name="ResizeGripBottomRight" Width="10" Height="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                Background="Transparent" MouseLeftButtonDown="ResizeGrip_MouseLeftButtonDown" 
                Grid.RowSpan="2" Cursor="SizeNWSE"/>
        
        <!-- Custom Title Bar -->
        <Border Grid.Row="0" 
                Background="Transparent" 
                Height="40" 
                MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <!-- Title -->
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal" 
                            VerticalAlignment="Center" 
                            Margin="15,0,0,0">
                    <!-- App Icon -->
                    <Image Source="pack://application:,,,/icon.ico" 
                           Width="16" 
                           Height="16" 
                           VerticalAlignment="Center" 
                           Margin="0,0,8,0"/>
                    <TextBlock Text="YT-DLP Wrapper" 
                               Style="{StaticResource SubtitleTextStyle}"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="Video Downloader" 
                               Style="{StaticResource SecondaryTextStyle}"
                               VerticalAlignment="Center" 
                               Margin="8,0,0,0"/>
                </StackPanel>
                
                <!-- Window Controls -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Margin="0,0,10,0">
                    <Button x:Name="MinimizeButton" 
                            Content="_" 
                            Width="30" 
                            Height="30" 
                            Background="Transparent" 
                            Foreground="{StaticResource TextSecondaryColor}" 
                            BorderThickness="0" 
                            FontSize="10"
                            FontFamily="Segoe UI Symbol"
                            Click="MinimizeButton_Click"/>
                    <Button x:Name="MaximizeButton" 
                            Content="☐" 
                            Width="30" 
                            Height="30" 
                            Background="Transparent" 
                            Foreground="{StaticResource TextSecondaryColor}" 
                            BorderThickness="0" 
                            FontSize="10"
                            FontFamily="Segoe UI Symbol"
                            Click="MaximizeButton_Click"/>
                    <Button x:Name="CloseButton" 
                            Content="×" 
                            Width="30" 
                            Height="30" 
                            Background="Transparent" 
                            Foreground="{StaticResource ErrorColor}" 
                            BorderThickness="0" 
                            FontSize="14"
                            FontFamily="Segoe UI Symbol"
                            Click="CloseButton_Click"/>
                </StackPanel>
            </Grid>
        </Border>
        
        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
        
        <!-- Top Section: YouTube Player, Cat Image, and Log Output -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.2*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="1.2*"/>
            </Grid.ColumnDefinitions>
            
            <!-- YouTube Player Section (Left side) -->
            <Border x:Name="VideoPreviewSection" Grid.Column="0" Style="{StaticResource CardStyle}" Margin="0,0,5,0" Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Video Preview" 
                               Style="{StaticResource SubtitleTextStyle}"
                               Margin="0,0,0,10"/>
                    
                    <!-- YouTube Player -->
                    <Border Grid.Row="1" 
                            Background="{StaticResource SurfaceColor}" 
                            CornerRadius="8">
                        <wv2:WebView2 x:Name="YouTubePlayer" 
                                      NavigationCompleted="YouTubePlayer_NavigationCompleted"
                                      Margin="5"
                                      HorizontalAlignment="Stretch"
                                      VerticalAlignment="Stretch"/>
                    </Border>
                    
                    <Button x:Name="ClearVideoButton" 
                            Grid.Row="2"
                            Style="{StaticResource ModernButtonStyle}" 
                            Content="Clear Video" 
                            Margin="0,10,0,0"
                            Click="ClearVideoButton_Click"/>
                </Grid>
            </Border>
            
            <!-- Center Cat Image Section -->
            <Viewbox Grid.Column="2" 
                     Stretch="Uniform" 
                     MaxWidth="400" 
                     MaxHeight="300"
                     HorizontalAlignment="Center" 
                     VerticalAlignment="Center">
                <Image x:Name="CenterImage" 
                       Source="cats.png" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center"/>
            </Viewbox>
            
            <!-- Log Output Section (Right side) -->
            <Border Grid.Column="4" Style="{StaticResource CardStyle}" Margin="5,0,0,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Log Output &amp; Progress" 
                               Style="{StaticResource SubtitleTextStyle}"
                               Margin="0,0,0,10"/>
                    
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto" 
                                  HorizontalScrollBarVisibility="Auto">
                        <TextBox x:Name="LogOutput" 
                                 IsReadOnly="True" 
                                 Background="Transparent" 
                                 BorderThickness="0" 
                                 Foreground="{StaticResource TextSecondaryColor}" 
                                 FontFamily="Consolas" 
                                 FontSize="11" 
                                 Text="Welcome to YT-DLP Wrapper! Paste a video URL and click 'Load Video' to preview, then choose quality to download..." 
                                 TextWrapping="Wrap"/>
                    </ScrollViewer>
                    
                    <!-- Progress Bar -->
                    <ProgressBar x:Name="ProgressBar" 
                                 Grid.Row="2" 
                                 Style="{StaticResource ModernProgressBarStyle}"
                                 Height="6" 
                                 Margin="0,10,0,0" 
                                 Visibility="Collapsed"/>
                </Grid>
            </Border>
        </Grid>

        <!-- URL Input Section -->
        <Border Grid.Row="1" Style="{StaticResource CardStyle}" Margin="0,15,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Grid.ColumnSpan="2" 
                           Text="Video URL" 
                           Style="{StaticResource SubtitleTextStyle}"
                           Margin="0,0,0,10"/>
                
                <TextBox x:Name="UrlInput" 
                         Grid.Row="1" 
                         Grid.Column="0" 
                         Style="{StaticResource WatermarkTextBoxStyle}" 
                         Margin="0,0,10,0" 
                         FontSize="14"
                         Text=""/>
                
                <Button x:Name="LoadButton" 
                        Grid.Row="1" 
                        Grid.Column="1" 
                        Style="{StaticResource ModernButtonStyle}" 
                        Content="🎬 Load Video" 
                        Width="140" 
                        Click="LoadButton_Click"/>
            </Grid>
        </Border>

        <!-- Download Quality Panel (Shown after loading) -->
        <Border Grid.Row="2" 
                x:Name="QualitySelectionPanel"
                Style="{StaticResource CardStyle}"
                Visibility="Collapsed"
                Margin="0,10,0,10"
                BorderThickness="2">
            <Border.BorderBrush>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                    <GradientStop Color="#007ACC" Offset="0"/>
                    <GradientStop Color="#0099FF" Offset="1"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="📥 Download Quality Selection" 
                           Style="{StaticResource SubtitleTextStyle}"
                           Margin="0,0,0,15"/>
                
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                               Text="Quality:" 
                               Style="{StaticResource SecondaryTextStyle}"
                               VerticalAlignment="Center" 
                               Margin="0,0,15,0"/>
                    
                    <ComboBox x:Name="QualitySelector" 
                              Grid.Column="1"
                              Style="{StaticResource ModernComboBoxStyle}" 
                              SelectedIndex="4"
                              Margin="0,0,15,0">
                        <ComboBoxItem Content="🔥 Best Available"/>
                        <ComboBoxItem Content="📺 2160p (4K)"/>
                        <ComboBoxItem Content="🎬 1440p (2K)"/>
                        <ComboBoxItem Content="📹 1080p (FHD)"/>
                        <ComboBoxItem Content="🎥 720p (HD)"/>
                        <ComboBoxItem Content="📱 480p"/>
                        <ComboBoxItem Content="💾 360p"/>
                        <ComboBoxItem Content="📞 240p"/>
                        <ComboBoxItem Content="⚡ 144p"/>
                    </ComboBox>
                    
                    <Button x:Name="DownloadButton" 
                            Grid.Column="2"
                            Style="{StaticResource ModernButtonStyle}" 
                            Content="📥 Download Now" 
                            Width="160"
                            Click="DownloadButton_Click"/>
                </Grid>
            </Grid>
        </Border>

        <!-- Action Buttons Section -->
        <Border Grid.Row="3" Style="{StaticResource CardStyle}" Margin="0,15,0,0">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" 
                           Text="File Management" 
                           Style="{StaticResource SubtitleTextStyle}"
                           Margin="0,0,0,15"/>
                
                <!-- Action Buttons Row -->
                <UniformGrid Grid.Row="1" 
                            Rows="1" 
                            Columns="2"
                            HorizontalAlignment="Center">
                    <Button x:Name="OpenDownloadsButton" 
                            Style="{StaticResource ModernButtonStyle}" 
                            Content="📁 Show Downloads Folder" 
                            Margin="5" 
                            Click="OpenDownloadsButton_Click"/>
                    <Button x:Name="ClearTempButton" 
                            Style="{StaticResource ModernButtonStyle}" 
                            Content="🗑️ Clear Temp Files" 
                            Margin="5"
                            Click="ClearTempButton_Click"/>
                </UniformGrid>
            </Grid>
        </Border>
        
        </Grid>
    </Grid>
</Window> 
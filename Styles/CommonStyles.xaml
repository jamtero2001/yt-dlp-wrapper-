<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:system="clr-namespace:System;assembly=mscorlib"
                    xmlns:converters="clr-namespace:YtDlpWrapper.Converters">

    <!-- Converters -->
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    
    <system:Boolean x:Key="True">True</system:Boolean>
    <system:Boolean x:Key="False">False</system:Boolean>
    
    <!-- Inverse Boolean Converter -->
    <converters:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
    
    <!-- String to Visibility Converter -->
    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter"/>

    <!-- Custom Styles -->
    <Style x:Key="MaterialDesignRaisedButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
        <Setter Property="Margin" Value="5"/>
        <Setter Property="Padding" Value="16,8"/>
    </Style>

    <Style x:Key="MaterialDesignIconButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
        <Setter Property="Margin" Value="2"/>
        <Setter Property="Padding" Value="8"/>
    </Style>

    <Style x:Key="MaterialDesignOutlinedTextBox" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <Style x:Key="MaterialDesignOutlinedComboBox" TargetType="ComboBox" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}">
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="Padding" Value="12,8"/>
    </Style>

    <Style x:Key="MaterialDesignLinearProgressBar" TargetType="ProgressBar" BasedOn="{StaticResource MaterialDesignLinearProgressBar}">
        <Setter Property="Margin" Value="0,4"/>
        <Setter Property="Height" Value="8"/>
    </Style>

</ResourceDictionary> 